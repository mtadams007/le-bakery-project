<div class="row">
  <%@cake_hash.each do |key, value| %>
  <div class="card large col s12 m6 l4">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator card-pic" src=<%=@cake_hash[key].pic%>>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%=@cake_hash[key].name%><i class="material-icons right">more_vert</i></span>
      <h5><%=@cake_hash[key].price%></h5>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%=@cake_hash[key].name%><i class="material-icons right">close</i></span>
      <p><%=@cake_hash[key].description%></p>
    </div>
  </div>
  <% end %>
</div>

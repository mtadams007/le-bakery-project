<div class="row">
  <%$cookie_hash.each do |key, value| %>
  <div class="card large col s12 m4">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src=<%=$cookie_hash[key].pic%>>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%=$cookie_hash[key].name%><i class="material-icons right">more_vert</i></span>
      <h5><%=$cookie_hash[key].price%></h5>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%=$cookie_hash[key].name%><i class="material-icons right">close</i></span>
      <p><%=$cookie_hash[key].description%></p>
    </div>
  </div>
  <% end %>
</div>
